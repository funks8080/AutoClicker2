<Window x:Class="AutoClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoClicker"
        mc:Ignorable="d"
        Title="AutoClicker" Height="300" Width="300">
    <Grid>
        <Button Name="SingleButton" Content="Single Click" HorizontalAlignment="Left" Margin="60,49,0,0" VerticalAlignment="Top" Width="75" Command="{Binding SingleCommand}"/>
        <Button Name="MultiButton" Content="Multi-Click" HorizontalAlignment="Left" Margin="168,49,0,0" VerticalAlignment="Top" Width="75" Command="{Binding MultiCommand}"/>
        <Button Name="ExitButton" Content="Exit" HorizontalAlignment="Left" Margin="115,125,0,0" VerticalAlignment="Top" Width="75" Command="{Binding ExitCommand}"/>

    </Grid>
</Window>
